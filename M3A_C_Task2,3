#include <stdio.h>

int bitAt()
{
    int num, n, bitStatus;

    printf("Enter any number: ");
    scanf("%d", &num);

    printf("Enter nth bit to check (0-31): ");
    scanf("%d", &n);

    bitStatus = (num >> n) & 1;

    printf("The %d bit is set to %d", n, bitStatus);

    return bitstatus;
}

int clearBit()
{
    int num, n, result = 0, Mask = 1;

    printf("Enter any number: ");
    scanf("%d", &num);

    printf("Enter nth bit to set to 0 ");
    scanf("%d", &n);

    Mask = ~(1 << n);
    result = num&Mask;
    printf("The result number is %d", result);

    return result;
}
